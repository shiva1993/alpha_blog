<table>
<ul>
<% if @article.errors.any? %>
	<%@article.errors.full_messages.each do |msg|%>
	 <li> <%=msg%> </li>
<%end%>
<%end%>
</ul>
</table>
<%= form_for @article do |f|%>
	<p>
		<%= f.label :title%> <br>
		<%=f.text_field :title%> <br>
	</p>
	<p>
		<%= f.label :description%><br>
		<%= f.text_field  :description %><br>
	</p>

	 <%= f.button 'submit'%>

<%end%>

<%= link_to 'back',articles_root_path%>